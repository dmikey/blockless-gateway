{
	"name": "@blockless/gateway",
	"private": true,
	"version": "1.0.0",
	"license": "Apache-2.0",
	"workspaces": [
		"packages/server",
		"packages/core",
		"packages/ui"
	],
	"scripts": {
		"prepare": "husky install",
		"build": "npm run build:core && npm run build:ui && npm run build:server",
		"build:core": "npm run build --workspace=packages/core",
		"build:server": "npm run build --workspace=packages/server",
		"build:ui": "npm run build --workspace=packages/ui",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"test": "yarn workspace @blockless/gateway-core test"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.2.0",
		"@typescript-eslint/eslint-plugin": "^6.3.0",
		"@typescript-eslint/parser": "^6.3.0",
		"eslint": "^8.46.0",
		"husky": "^8.0.3",
		"prettier": "^3.0.0"
	},
	"dependencies": {
		"bull": "^4.16.4",
		"ioredis": "^5.4.1"
	}
}
